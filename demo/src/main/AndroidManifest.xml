<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="moe.feng.common.view.breadcrumbs.demo">

	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

	<application
		    android:name="moe.feng.common.view.breadcrumbs.App"
			android:allowBackup="true"
			android:icon="@mipmap/ic_launcher"
			android:label="@string/app_name"
			android:supportsRtl="true"
			android:theme="@style/AppTheme">
		<activity
				android:name="moe.feng.common.view.breadcrumbs.MainActivity"
				android:theme="@style/AppTheme.NoActionBar">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>

				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>

		<activity
				android:name="moe.feng.common.view.breadcrumbs.SimpleFileManagerActivity"
				android:theme="@style/AppTheme.NoActionBar">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
			</intent-filter>
		</activity>
	</application>

</manifest>